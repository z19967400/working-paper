/* pages/lvshiqingkuan/lvshiqingkuan.wxss */
.lvshiqingkuan {
  width: 100%;
  min-height: 100vh;
}
.content{
  background: #f5f5f5;
}

.weui-label {
  max-width: 6.5em!important;
  font-size: 14px;
  color: #303031;
}
.weui-cells__group_form .weui-cell__hd {
  padding-right: 8px!important;
}
.weui-cell__bd {
  font-size: 12px;
}
.weui-select,
.weui-input{
  color: #606366;
}
.weui-cells{
  position: relative;
  top: 40px;
}
.btn-box{
  z-index: 1111;
  display: flex;
  height: 50px;
  color: white;
  justify-content: space-around;
  font-size: 14px;
  background: #ec193a;
  position: fixed;
  bottom: 0;
  width: 100%;
  line-height: 50px;
}
.xian{
  height: 80%;
  width: 1px;
  background: white;
  transform: translateY(10%);
  display: inline-block;
}
.btn{
  display: inline-block;
  background: #ec193a;
  color: white;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  border-radius: 5px;
  padding: 0 36rpx;
  margin-top: 18rpx;
  min-width: 220rpx;
  margin: 0 10rpx;
  margin-top: 10rpx;
  text-align: center;
  width: 100%;
}
.weui-cell {
  padding-left: 32rpx!important;
  height: 45px;
  line-height: 45px;
  padding-top: 0!important;
  padding-bottom: 0!important;
}
.weui-cells__group_form .weui-cell_select .weui-cell__bd::after {
  right: 32rpx!important;
}
.weui-cells__group_form .weui-cells::after,
.weui-cells__group_form .weui-cell::before{
  left: 16px !important;
  right: 16px !important;
}