/**index.wxss**/
.index {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100vh;
  background: rgba(249, 249, 249, 1);
}
/* 申请授权部分 */
.application {
  padding: 200rpx 0;
}
.application > .top {
  margin-bottom: 40rpx;
}
.application > .top > image {
  width: 100%;
  height: 175rpx;
}
.application > .bottom {
  text-align: center;
}
.application > .bottom > text {
  display: block;
  font-size: 28rpx;
  margin: 20rpx 0;
}
.application > .bottom text:nth-child(1) {
  color: #303133;
}
.application > .bottom text:nth-child(2) {
  color: #909199;
}
/* 主视图区域 */
.home {
  width: 100%;
  height: 100%;
}
.neirong {
  position: relative;
  /* padding-bottom: 40px; */
}
.authentication {
  border-radius: 5px !important;
  background: #ec193a;
  color: white;
  font-size: 32rpx !important;
  display: inline-block;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}
.navLeft-item {
  color: #333;
  font-size: 28rpx;
  display: block;
  padding: 20rpx 0;
  text-align: center;
  border-bottom: 1px solid #f5f5f5;
}
.bg {
  background: url("http://www.debteehelper.com/assets/imgs/option/bg2.jpg")
    no-repeat;
  background-size: cover;
  height: 100%;
}
.bg2 {
  background: url("http://www.debteehelper.com/assets/imgs/cases/bg2.jpg")
    no-repeat;
  background-size: cover;
  height: 100%;
}
.swiper {
  height: 84vh;
  width: 100%;
}
.content {
  padding: 20rpx 48rpx;
}
.h3 {
  font-size: 40rpx;
  color: white;
  padding-top: 60rpx;
  display: block;
}
.p {
  font-size: 28rpx;
  color: white;
}
.xian {
  display: block;
  width: 78rpx;
  height: 4rpx;
  background: white;
  margin-top: 20rpx;
}
.section02 {
  background: #f2f2f2;
}
.xian2 {
  width: 58rpx;
  height: 4rpx;
  background: #ec193a;
  display: block;
}
.color2 {
  color: #000000;
}
.xian2 {
  margin-top: 20rpx;
}
.img {
  margin: 120rpx auto;
  display: block;
}
.section03 {
  background: url("http://www.debteehelper.com/assets/imgs/index/Nipic_21790122_20170214113552982000@2x.png")
    no-repeat;
  position: relative;
  background-color: #000;
  background-position: right bottom !important;
  background-size: 100%;
  padding-bottom: 20rpx;
}
.left {
  display: inline-block;
  width: 32px;
  height: 32px;
}
.section03 .h3 {
  text-align: center;
}
.section03 .xian2 {
  margin: 20rpx auto;
}
.section03 .item {
  display: flex;
  padding: 40rpx 0 40rpx 128rpx;
}
.section03 .item .left {
  margin-right: 40rpx;
}
.section03 .item .right text {
  display: block;
  color: white;
}
.section03 .item .right > text:first-child {
  font-size: 28rpx;
}
.section03 .item .right > text:last-child {
  font-size: 24rpx;
}
.box {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.box > view {
  width: 25%;
  text-align: center;
  margin-bottom: 10rpx;
}
.box > view > image {
  width: 110rpx;
  /* height: 110rpx; */
}
.footer {
  background: #000;
  text-align: center;
  color: white;
}
.footer > .img1 {
  width: 400rpx;
  height: 120rpx;
  display: inline-block;
  margin: 80rpx 0;
}
.footer > .img2 {
  width: 360rpx;
  height: 360rpx;
}
.text-box {
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
  width: 340rpx;
  margin: auto;
  background-color: white;
  position: relative;
  top: -30rpx;
}
.text-box text {
  font-size: 24rpx;
  display: block;
  color: #333;
}
.footer .text1 {
  color: #7f7f7f;
  font-size: 28rpx;
  display: block;
  margin: 80rpx;
  text-align: center;
}
.footer .text2 {
  color: #ec193a;
  font-size: 32rpx;
  display: block;
  margin-bottom: 80rpx;
  text-align: center;
}
.buttom {
  width: 100%;
  height: 100rpx;
  color: #727272;
  background-color: rgba(0, 0, 0, 0.61);
  font-size: 28rpx;
}
.buttom text {
  display: block;
  text-align: center;
}
.tab-active {
  color: rgba(236, 25, 58, 1) !important;
}
.tab-text {
  font-size: 32rpx;
  color: #333;
  display: block;
}
.col {
  text-align: center;
}
.row {
  height: 70rpx;
  line-height: 70rpx;
}
.tabs {
  box-shadow: 0px 8rpx 20rpx 0px rgba(0, 0, 0, 0.1);
}
.cases-list {
  margin-top: 10rpx;
  background: rgba(249, 249, 249, 1);
}
.cases-item:first-child {
  margin-top: 30rpx;
}
.cases-item {
  background: rgba(255, 255, 255, 1);
  padding: 20rpx 80rpx;
  margin-bottom: 40rpx;
}
.cases-item-shu {
  width: 6rpx;
  height: 28rpx;
  background: rgba(236, 25, 58, 1);
  display: inline-block;
  margin-right: 20rpx;
}
.cases-item-title {
  margin-bottom: 20rpx;
}
.cases-item-title > text:nth-child(2) {
  font-size: 28rpx;
  color: rgba(81, 81, 81, 1);
  position: relative;
  top: -3rpx;
}
.cases-item-content {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.cases-tiem-content-right {
  background-color: rgba(236, 25, 58, 1);
  width: 172rpx;
  height: 100rpx;
  border-radius: 8rpx;
  text-align: center;
  position: relative;
  top: 5px;
}
.cases-tiem-content-right > text {
  font-size: 22rpx;
  color: white;
}
.cases-tiem-content-right > text:first-child {
  font-size: 32rpx;
}
.cases-tiem-content-right > text:last-child {
  display: block;
}
.cases-tiem-content-right > text:first-child,
.cases-tiem-content-right > text:nth-child(2) {
  display: inline-block;
  margin-top: 18rpx;
}
.cases-tiem-content-left {
  font-size: 24rpx;
  color: rgba(74, 74, 74, 1);
}
.cases-tiem-content-left > view {
  height: 50rpx;
  line-height: 50rpx;
}
.cases-tiem-content-left > view > text:nth-child(1) {
  width: 125rpx;
  display: inline-block;
}
.cases-item-shu2 {
  display: inline-block;
  width: 4rpx;
  height: 100%;
  background: rgba(239, 239, 239, 1);
  position: relative;
  top: 15rpx;
  margin-right: 40rpx;
}
.cases-item-b {
  color: rgba(236, 25, 58, 1);
  font-size: 32rpx;
}
.cases-item-bottom {
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  line-height: 60rpx;
}
.location {
  font-size: 24rpx;
}
.location-icon {
  position: relative;
  top: 4rpx;
}
.cases-item-bottom-info {
  height: 50rpx !important;
  line-height: 50rpx !important;
  overflow: visible !important;
  font-size: 24rpx;
}
.nodeImg {
  width: 150px;
  height: 150px;
  display: block;
  margin: auto;
}
.red {
  color: #ec193a;
}
.nodeData-text {
  text-align: center;
  color: #999;
  font-size: 14px;
  display: block;
}
.user-text{
  font-size: 28rpx;
  position: relative;
  top: -10rpx;
  left: 10rpx;
}
