/* pages/user/user.wxss */
page,
.user{
  height: 100%;
  position: relative;
  background: #f5f5f5;
}
.hd{
  width: 100%;
  position: relative;
}
.hd .bg{
  width: 100%;
}
.hd .hd-content{
  position: absolute;
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
}
.headerimg{
    width: 175rpx;
    height: 175rpx;
    border: 5px solid rgba(13, 11, 11, 0.2);
    margin: auto;
    margin-bottom: 10px;
    border-radius: 50px;
    position: relative;
    background: #f5f5f5;
    margin-top: 185rpx;
}
.hd .upload{
  position: absolute;
    bottom: 0;
    right: 0;
    display: block;
    width: 30px;
    height: 30px;
    background: #fff;
    border-radius: 15px;
    text-align: center;
    line-height: 30px;
    z-index: 11;
}
.hd .upload .icon{
  color: #E01F3C;
  position: relative;
  top: 9rpx;
  left: 3rpx;
}
.hd .attestation{
  position: absolute;
  left: 205rpx;
  top: 65px;
  background: #fff;
  display: inline-block;
  border-radius: 30px;
  font-size: 12px;
  padding: 3px 10px;
  color: rgb(236,25,58);
}
.hd .attestation .icon{
  position: relative;
  top: 5rpx;
  left: 5rpx;
}
.hd .text{
  color: white;
  text-align: center;
}
.hd .text text:nth-child(1){
  font-size: 20px;
  font-weight: bold;
  letter-spacing: 2px;
  line-height: 40px;
  display: block;
}
.hd .text text:nth-child(2){
  letter-spacing: 2px;
  font-size: 28rpx;
}

.hd .logo{
  width: 150px;
  position: absolute;
  left: 20rpx;
}
.content{
  background-color: #fff;
  margin-top: 10rpx;
}
.cell{
  display: flex;
  padding: 10px 60rpx;
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
}
.cell image{
  width: 40rpx;
  margin-right: 30rpx;
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}
.cell text{
  font-size: 28rpx;
}
.cell .icon{
  float: right;
  position: absolute;
  right: 60rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #999;
}
.toast-bg{
  background-color:   rgb(0,0,0,0.6);
  position: absolute;
  top: 0;
  width: 100%;
  left: 0;
  height: 100%;
}
.toast-form{
  background-color:rgb(255,255,255,1);
  width: 75%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius: 20rpx;
  padding: 0 50rpx;
}
.getCode{
  display: inline-block;
  font-size: 24rpx;
  padding: 0 16rpx;
  color: #fff;
  background-color: #ec193a;
  border: 1px solid #ec193a;
  height: 46rpx;
  line-height: 46rpx;
  margin-top: 9rpx;
}
.codeFalse{
  opacity: 0.5;
}
.title{
  font-size: 28rpx;
  text-align: left;
  padding: 10rpx 0;
  margin: 20rpx 0 40rpx 0;
}
.row text{
  font-size: 26rpx;
  line-height: 64rpx;
  width: 120rpx;
}
.row input{
  font-size: 26rpx;
  display: inline-block;
  padding-left: 10rpx;
  height: 64rpx;
  margin: 0 10rpx;
  width: 220rpx;
}
.row{
  width: 100%;
  height: 64rpx;
  margin-bottom: 40rpx;
  display: flex;
  border-bottom: 1px solid #ebedf0;
}
.submit{
  font-size: 26rpx;
  display: block;
  width: 180rpx;
  color: #ec193a;
  background-color: #fff;
  border: 1px solid #ec193a;
  text-align: center;
  height: 64rpx;
  line-height: 64rpx;
  margin: 60rpx auto 30rpx auto;
  border-radius: 40rpx;
}