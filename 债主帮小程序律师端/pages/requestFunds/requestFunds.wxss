/* pages/requestFunds/requestFunds.wxss */
.requestFunds {
  width: 100%;
  min-height: 100vh;
}
.content{
  background: #f5f5f5;
}
.scroll{
  /* padding-bottom: 120rpx; */
}
.item-box{
  background: white;
  width: 90%;
  margin: 40rpx auto 0 auto;
  box-shadow: 8rpx 8rpx 8rpx #ccc;
  border-radius: 20rpx;
}
.item-box:last-child{
  margin-bottom: 120rpx;
}
.item-box-header{
  display: flex;
  justify-content: space-between;
  background: #efeeee;
  padding: 0 20rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.item-box-body{
  position: relative;
  padding: 40rpx;
}
.item-box-body-status{
  position: absolute;
  right: 40rpx;
  padding: 4rpx 24rpx;
  border: 1px solid #ccc;
  font-size: 24rpx;
  top: 40rpx;
  color: #606366;
  border-radius: 10rpx;
}
.item-box-body-texts{
  padding: 0 40rpx;
  margin-bottom: 30rpx;
}
.item-box-body-texts > text{
  display: block;
  color: #606366;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.item-box-header > text:nth-child(1){
  color: #303133;
  font-size: 30rpx;
  font-weight: 600;
}
.item-box-header > text:nth-child(2){
  color: #303133;
  font-size: 24rpx;
}
.item-box-footer > text:nth-child(1){
  margin-bottom: 10rpx;
}
.item-box-footer > text{
  font-size: 24rpx;
  display: block;
  color: #606366;
 
}
.footer{
  position: fixed;
  bottom: 0;
  height: 80rpx;
  width: 100%;
  box-shadow: 4rpx 0 4rpx #ccc;
  text-align: center;
  background: white;
}
.btn{
  display: inline-block;
  background: #ec193a;
  color: white;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  border-radius: 5px;
  padding: 0 36rpx;
  margin-top: 18rpx;
  width: 180rpx;
  margin: 0 10rpx;
  margin-top: 10rpx;
}
.select-box{
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0, 0, 0, 0.4);
  left: 0;
  top: 0;
}
.select-body{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  background: white;
  width: 90%;
  border-radius: 10rpx;
}
.select-body-content{
  padding: 20rpx;
  position: relative;
}
.cross{
  position: absolute!important;
  right: 20rpx;
}
.stop{
  overflow: hidden!important;
}
.select-time{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 40%;
  background: white;
  transform: translateY(100%);
}
.top{
  transform: translateY(0%);
}